# Sanjivani AI - Production Environment Variables
# Copy to .env.production and configure for your deployment

# ============ Application ============
APP_NAME=sanjivani-ai
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ============ Security ============
# Comma-separated list of valid API keys
API_KEYS=your-production-api-key-1,your-production-api-key-2

# Enable rate limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com

# ============ API ============
API_HOST=0.0.0.0
API_PORT=8000

# ============ Dashboard ============
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# ============ Model Settings ============
INFERENCE_DEVICE=cpu
NLP_BATCH_SIZE=16
MAX_SEQUENCE_LENGTH=128

# ============ Optional: External APIs ============
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_BEARER_TOKEN=

# SENTINEL_API_KEY=

# ============ Optional: Database ============
# DATABASE_URL=postgresql://user:password@host:5432/sanjivani

# ============ Optional: Redis ============
# REDIS_URL=redis://redis:6379
