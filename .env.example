# =============================================================================
# Sanjivani AI - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=sanjivani-ai
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL with PostGIS)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://sanjivani:your_secure_password@localhost:5432/sanjivani_db
POSTGRES_USER=sanjivani
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=sanjivani_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Dashboard Configuration
# -----------------------------------------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# -----------------------------------------------------------------------------
# Twitter/X API Configuration (Optional - for live tweet streaming)
# -----------------------------------------------------------------------------
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# -----------------------------------------------------------------------------
# Satellite Imagery API (Optional - for live satellite data)
# -----------------------------------------------------------------------------
SENTINEL_HUB_CLIENT_ID=your_sentinel_hub_client_id
SENTINEL_HUB_CLIENT_SECRET=your_sentinel_hub_client_secret
COPERNICUS_USERNAME=your_copernicus_username
COPERNICUS_PASSWORD=your_copernicus_password

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
NLP_MODEL_PATH=models/nlp/best_model.pth
VISION_SEGMENTATION_MODEL_PATH=models/vision/unet_segmentation.pth
VISION_DETECTION_MODEL_PATH=models/vision/yolov8_detection.pt
FORECASTING_XGBOOST_PATH=models/forecasting/xgboost_model.pkl
FORECASTING_LSTM_PATH=models/forecasting/lstm_model.h5

# Model Settings
MAX_TWEET_LENGTH=128
NLP_BATCH_SIZE=16
VISION_IMAGE_SIZE=512
INFERENCE_DEVICE=cpu  # cpu or cuda

# -----------------------------------------------------------------------------
# Bihar Geographic Settings
# -----------------------------------------------------------------------------
BIHAR_CENTER_LAT=25.5941
BIHAR_CENTER_LON=85.1376
BIHAR_DEFAULT_ZOOM=7

# -----------------------------------------------------------------------------
# Monitoring and Alerting (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
SLACK_WEBHOOK_URL=
ALERT_EMAIL_RECIPIENTS=
